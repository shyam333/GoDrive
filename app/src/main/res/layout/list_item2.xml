<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@color/blue">

        <TextView
            android:id="@+id/job"
            android:layout_marginLeft="8dp"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:textColor="@android:color/background_dark"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/category"
            android:layout_marginLeft="8dp"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_marginTop="40dp"
            android:textColor="@android:color/background_dark"
            android:textSize="18sp" />
    </android.support.v7.widget.CardView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cardView"
        android:id="@+id/rl1">


        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignEnd="@+id/textView12"
            android:layout_alignRight="@+id/textView12"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            app:srcCompat="@drawable/ico1"
            tools:ignore="UnknownId" />

        <TextView
            android:id="@+id/edt1"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/imageView3"
            android:layout_marginLeft="22dp"
            android:layout_marginStart="22dp"
            android:layout_toEndOf="@+id/imageView3"
            android:layout_toRightOf="@+id/imageView3"
            android:text="Experience" />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignLeft="@+id/imageView3"
            android:layout_alignStart="@+id/imageView3"
            android:layout_below="@+id/edt1"
            android:layout_marginTop="15dp"
            app:srcCompat="@drawable/ico3" />

        <TextView
            android:id="@+id/edt2"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/imageView4"
            android:layout_alignLeft="@+id/edt1"
            android:layout_alignStart="@+id/edt1"
            android:text="Vacancies" />

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignLeft="@+id/imageView4"
            android:layout_alignStart="@+id/imageView4"
            android:layout_below="@+id/edt2"
            android:layout_marginTop="12dp"
            app:srcCompat="@drawable/ico2" />

        <TextView
            android:id="@+id/newusertxt"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/imageView5"
            android:layout_alignLeft="@+id/edt2"
            android:layout_alignStart="@+id/edt2"
            android:text="location"/>

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignLeft="@+id/imageView5"
            android:layout_alignStart="@+id/imageView5"
            android:layout_below="@+id/imageView5"
            android:layout_marginTop="17dp"
            app:srcCompat="@drawable/ico4" />

        <TextView
            android:id="@+id/txt4"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/imageView6"
            android:layout_alignLeft="@+id/newusertxt"
            android:layout_alignStart="@+id/newusertxt"
            android:text="Salary Per Annum" />

        <TextView
            android:id="@+id/txt5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/txt4"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="8dp"
            android:text="Description"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txt6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/txt5"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:autoSizeTextType="uniform" />

        <TextView
            android:id="@+id/txt7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/txt6"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="8dp"
            android:text="KeySkills"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txt8"
            android:layout_marginRight="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/txt7"
            android:layout_marginLeft="8dp"
            />


        <TextView
            android:id="@+id/txt12"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/txt8"
            android:layout_alignStart="@+id/txt8"
            android:layout_below="@+id/txt8"
            android:layout_marginRight="8dp"
            android:layout_marginTop="8dp"
            android:text="Education"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txt13"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/txt12"
            android:layout_alignStart="@+id/txt12"
            android:layout_below="@+id/txt12"
            android:layout_marginRight="8dp" />

        <TextView
            android:id="@+id/txt14"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/txt13"
            android:layout_alignStart="@+id/txt13"
            android:layout_below="@+id/txt13"
            android:layout_marginRight="8dp"
            android:layout_marginTop="8dp"
            android:text="Contact Details"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txt15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/txt12"
            android:layout_alignLeft="@+id/txt14"
            android:layout_alignRight="@+id/txt12"
            android:layout_alignStart="@+id/txt14"
            android:layout_below="@+id/txt14" />

        <TextView
            android:id="@+id/txt16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/txt15"
            android:layout_alignLeft="@+id/txt15"
            android:layout_alignRight="@+id/txt15"
            android:layout_alignStart="@+id/txt15"
            android:layout_below="@+id/txt15" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/rl1">

        <Button
            android:id="@+id/btn"
            android:textColor="@color/white"
            android:background="@color/blue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:text="Apply" />
    </RelativeLayout>

</RelativeLayout>