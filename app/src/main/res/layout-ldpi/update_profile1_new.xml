<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UpdateProfile1">

    <include
        layout="@layout/toolbar"
        android:id="@id/toolbar"/>




    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="5dp">



            <Button
            android:id="@+id/btn"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:background="@color/blue"
            android:fontFamily="@font/roboto"
            android:onClick="nextPage"
            android:text="Next"
            android:textColor="@color/white"
            tools:ignore="RtlCompat" />


    </ScrollView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/toolbar">

        <EditText
            android:id="@+id/edt1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/toolbar"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="27dp"
            android:fontFamily="@font/roboto"
            android:hint="Name"
            android:inputType="textPersonName"
            android:textSize="14sp"
            tools:ignore="RtlCompat" />

        <EditText
            android:id="@+id/edt2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/edt1"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="27dp"
            android:fontFamily="@font/roboto"
            android:hint="Contact Number"
            android:inputType="number"
            android:maxLength="10"
            android:textSize="14sp"
            tools:ignore="RtlCompat" />

        <Spinner
            android:id="@+id/spin2"
            style="@android:style/Widget.Holo.Light.Spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/spin1"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="27dp"
            android:ems="10"
            android:fontFamily="@font/roboto"
            android:hint="Industry"
            android:inputType="textPersonName"
            android:spinnerMode="dialog"
            android:textSize="14sp"
            tools:ignore="RtlCompat" />

        <EditText
            android:id="@+id/edt5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/spin2"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="27dp"
            android:ems="10"
            android:fontFamily="@font/roboto"
            android:hint="Education"
            android:inputType="textCapSentences"
            android:textSize="14sp"
            tools:ignore="RtlCompat" />

        <EditText
            android:id="@+id/edt6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/edt5"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="27dp"
            android:ems="10"
            android:fontFamily="@font/roboto"
            android:hint="Keyskills"
            android:inputType="textCapSentences"
            android:textSize="14sp"
            tools:ignore="RtlCompat" />

        <EditText
            android:id="@+id/edt7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/edt6"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="27dp"
            android:ems="10"
            android:fontFamily="@font/roboto"
            android:hint="Experience"
            android:inputType="number"

            android:textSize="14sp"
            tools:ignore="RtlCompat" />

        <Spinner
            android:id="@+id/spin1"
            style="@android:style/Widget.Holo.Light.Spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/edt2"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginStart="17dp"
            android:layout_marginTop="22dp"
            android:ems="10"
            android:fontFamily="@font/roboto"
            android:hint="Location"
            android:inputType="textPersonName"
            android:spinnerMode="dialog"
            android:textSize="14sp"
            tools:ignore="RtlCompat" />

        <TextView
            android:id="@+id/txt1"
            android:layout_width="379dp"
            android:layout_height="wrap_content"
            android:layout_above="@+id/edt1"
            android:layout_alignStart="@+id/edt1"
            android:layout_marginBottom="-27dp"
            android:fontFamily="@font/roboto_medium"
            android:text="Name"
            android:textSize="16sp"
            android:textStyle="bold"
            tools:ignore="RtlCompat" />

        <TextView
            android:id="@+id/txt2"
            android:layout_width="379dp"
            android:layout_height="wrap_content"
            android:layout_above="@+id/edt2"
            android:layout_alignStart="@+id/edt1"
            android:layout_marginBottom="-27dp"
            android:text="Contact no."
            android:fontFamily="@font/roboto_medium"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_alignLeft="@+id/edt1" />

        <TextView
            android:id="@+id/txt3"
            android:layout_width="378dp"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/edt1"
            android:layout_below="@+id/edt2"
            android:text="Location"
            android:fontFamily="@font/roboto_medium"
            android:textSize="16sp"
            android:textStyle="bold"
            tools:ignore="RtlCompat" />

        <TextView
            android:id="@+id/txt4"
            android:layout_width="379dp"
            android:layout_height="wrap_content"
            android:layout_above="@+id/spin2"
            android:layout_alignStart="@+id/edt1"
            android:layout_marginBottom="-27dp"
            android:text="Industry"
            android:fontFamily="@font/roboto_medium"
            android:textSize="16sp"
            android:textStyle="bold"
            tools:ignore="RtlCompat" />

        <TextView
            android:id="@+id/txt5"
            android:layout_width="377dp"
            android:layout_height="wrap_content"
            android:layout_above="@+id/edt5"
            android:layout_alignStart="@+id/edt1"
            android:layout_marginBottom="-27dp"
            android:text="Education"
            android:fontFamily="@font/roboto_medium"
            android:textSize="16sp"
            android:textStyle="bold"
            tools:ignore="RtlCompat" />

        <TextView
            android:id="@+id/txt6"
            android:layout_width="377dp"
            android:layout_height="wrap_content"
            android:layout_above="@+id/edt6"
            android:layout_alignStart="@+id/edt1"
            android:layout_marginBottom="-27dp"
            android:text="Keyskills"
            android:fontFamily="@font/roboto_medium"
            android:textSize="16sp"
            android:textStyle="bold"
            tools:ignore="RtlCompat" />

        <TextView
            android:id="@+id/txt7"
            android:layout_width="376dp"
            android:layout_height="wrap_content"
            android:layout_above="@+id/edt7"
            android:layout_alignStart="@+id/edt1"
            android:layout_marginBottom="-27dp"
            android:text="Experience"
            android:fontFamily="@font/roboto_medium"
            android:textSize="16sp"
            android:textStyle="bold"
            tools:ignore="RtlCompat" />

    </RelativeLayout>


</RelativeLayout>